@page "/"

@inject NavigationManager _navigationManager


<div class="d-flex justify-content-center">
    <div>
        <div>
            <div class="d-flex justify-content-center m-2">
                <h1>Tic Tac Toe</h1>
            </div>
            <div class="d-flex justify-content-center m-2">
                <h4>Choose your opponent</h4>
            </div>
        </div>
        <div class="mt-2">
            <button class="btn btn-info btn-lg btn-block" @onclick="PlayRandom">Random Bot</button>
        </div>
        <div class="mt-2">
            <button class="btn btn-info btn-lg btn-block" @onclick="PlayMiniMax">MiniMax Bot</button>
        </div> 
        <div class="mt-2">
            <button class="btn btn-info btn-lg btn-block" @onclick="PlayQLearn">Q-Learning Bot</button>
        </div> 
    </div>
</div>
@code {
    private void PlayRandom()
    {
        _navigationManager.NavigateTo("play/random");
    }
    private void PlayMiniMax()
    {
        _navigationManager.NavigateTo("play/minimax");
    }
    private void PlayQLearn()
    {
        _navigationManager.NavigateTo("pick/qlearn");
    }
}